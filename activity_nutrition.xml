<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Nutrition">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foods to eat during pregnancy"
        android:textSize="20dp"
        android:textColor="#2196F3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textAlignment="gravity"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.protein-rich foods like eggs, fish and meat "
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#101010"
        android:layout_marginLeft="50dp"
        android:textAlignment="gravity"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.Carbohydrates rich foods(starchy foods) like posho, sweet potatoes, yams, cassava"
        android:textSize="10dp"
        android:textColor="#101010"
        android:layout_marginLeft="50dp"
        android:textAlignment="gravity"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.Fruits and vegetables"
        android:textSize="10dp"
        android:textColor="#101010"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:textAlignment="gravity"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.Important nutrients"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#101010"
        android:layout_marginLeft="50dp"
        android:textAlignment="gravity"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.Folic acid: Found in beans, citrus fruits, green leafy vegetables and your prenatal vitamin."
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#101010"
        android:layout_marginLeft="50dp"
        android:textAlignment="gravity" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/food2"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>



<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="Calcium: Found in dairy (milk, yogurt and cheese) and dark leafy greens."
            android:textAlignment="gravity"
            android:textColor="#101010"
            android:textSize="10dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/food4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="foods to avoid during pregnancy"
            android:textAlignment="gravity"
            android:textColor="#2196F3"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="1.Raw meat(Unproperly cooked meat)"
            android:textAlignment="gravity"
            android:textColor="#101010"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="2.Raw eggs"
            android:textAlignment="gravity"
            android:textColor="#101010"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="3.Cheese"
            android:textAlignment="gravity"
            android:textColor="#101010"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="320dp"
            android:text="Drinks to avoid during pregnancy"
            android:textAlignment="gravity"
            android:textColor="#2196F3"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="350dp"
            android:text="1.Alcoholic drinks."
            android:textAlignment="gravity"
            android:textColor="#101010"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="2.Caffeinated drinks"
            android:textAlignment="gravity"
            android:textColor="#101010"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="And often drink water when pregnant (1-2 litres of water daily)"
            android:textAlignment="gravity"
            android:textColor="#101010"
            android:textSize="10dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:elevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:src="@drawable/food"/>



            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>